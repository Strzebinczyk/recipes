<div class="modal bg-dark bg-opacity-50 d-block" tabindex="-1" role="dialog" data-controller='modal'>
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content shadow">
      <div class="modal-header">
        <h5 class="modal-title">Edytuj składnik listy zakupów</h5>
      </div>
      <%= form_with url: update_ingredient_shopping_list_path, method: :patch do |f| %>
        <div class="modal-body">
          <%= f.text_field :ingredient_name, value: @ingredient_name, class: "form-control mb-2 name", placeholder: "Składnik", 'data-controller'=>"autocomplete", 'data-list' => ingredient_autocomplete, autocomplete: "off" %>
          <%= f.text_field :ingredient_quantities, value: @ingredient_quantities, class: "form-control mx-2 mb-2 quantity", placeholder: "Ilość" %>
          <%= f.hidden_field :shopping_list_id, value: params[:id] %>
          <%= f.hidden_field :ingredient_name_to_edit, value: @ingredient_name %>
        </div>
        <div class="modal-footer">
          <%= link_to "Zamknij", "#", data: {
            controller: "modals",
            action: "modal#close"
          }, class: "btn btn-secondary" %>
          <%= f.submit "Zapisz", class: "btn btn-primary", data: {turbo_frame: "_top"} %>
        </div>
     <% end %>
    </div>
  </div>
</div>
