<%= form_with url: update_name_shopping_list_path, method: :patch do |f| %>
  <div class='d-flex align-items-baseline mt-3'>
    <%= f.text_field :name, class: "form-control form-control-lg mb-2", placeholder: "Nazwa", value: shopping_list.name %>
    <%= f.hidden_field :shopping_list_id, value: params[:id] %>
    <%= f.submit "Zapisz", class: "btn btn-outline-success mx-2" %>
  </div>
<% end %>
