<div class='container mx-auto'>
  <div class="text-center mb-4">
    <h1 class='display-4 fw-normal py-2'>Lista dla planu <%= @shopping_list.plan.name %></h1>
  </div>
  <ul>
        <% @shopping_list.shopping_list_ingredients.each do |shopping_list_ingredient| %>
          <li class='mb-1'>
            <%= shopping_list_ingredient.name %>
            <span> - </span>
            <%= shopping_list_ingredient.quantity %>
          </li>
        <% end %>
      </ul>
</div>
