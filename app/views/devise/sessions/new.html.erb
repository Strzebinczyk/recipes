<div id="log-in" class="section devise-form">
  <div class="section-middle">
			<div class="container">
				<div class="row">
					<div class="col-sm-4">
						<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <div class="form needs-validation">
                <div class="form-group">
                  <%= f.label :email, autofocus: true, class: "form-label" %><br />
                  <%= f.email_field :email, class: "form-control", required: true %>
                  <% resource.errors.full_messages_for(:email).each do |message| %>
                    <div class='invalid-feedback d-block' data-controller="errors">
                      <%=message%>
                    </div>
                  <% end %>
                </div>

                <div class="form-group">
                  <%= f.label :password, 'Hasło', class: "form-label" %><br />
                  <%= f.password_field :password, class: "form-control", required: true %>
                  <% resource.errors.full_messages_for(:password).each do |message| %>
                    <div class='invalid-feedback d-block' data-controller="errors">
                      <%=message%>
                    </div>
                  <% end %>
                </div>

                <% if devise_mapping.rememberable? %>
                  <div class="remember-check">
                    <%= f.check_box :remember_me %>
                    <%= f.label :remember_me, 'Zapamiętaj mnie', class: "form-label" %>
                  </div>
                <% end %>

                <div class="form-btn">
                  <%= f.submit "Zaloguj", class: "btn btn-primary" %>
                </div>
                <%= render "devise/shared/links" %>
              </div>
            <% end %>

            
          </div>
          <div class="col-sm-8 ">
						<div class="side-text">
							<h1>Witaj ponownie</h1>
							<p>Mamy pyszne przepisy na wyciągnięcie ręki</p>
						</div>
					</div>
        </div>
      </div>
    </div>
    <a id="credit" href="https://www.vecteezy.com/free-photos/food">Food Stock photos by Vecteezy</a>
  </div>
</div>
