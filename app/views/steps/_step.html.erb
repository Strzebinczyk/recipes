<%= fields_for "recipe[steps_attributes][#{turbo_id_for(step)}]", step do |ff| %>
  <fieldset id="<%= turbo_id_for(step) %>">
    <div>
      <%= ff.label :instructions %>
      <%= ff.text_field :instructions %>
    </div>
    <%= ff.hidden_field :id %>
    <%= button_tag "Delete step", formaction: step_path(turbo_id_for(step)), formmethod: :delete %>
  </fieldset>
<% end %>
