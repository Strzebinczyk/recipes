<%= form_with url: plan_path(plan), method: :patch do |f| %>
  <div class='d-flex align-items-baseline mt-3'>
    <%= f.text_field :name, class: "form-control form-control-lg mb-2", placeholder: "Nazwa", value: plan.name %>
    <%= f.hidden_field :plan_id, value: params[:id] %>
    <%= f.submit "Zapisz", class: "btn btn-outline-success mx-2" %>
  </div>
<% end %>
