<%= turbo_frame_tag 'new_plan' %>
<div class='container'>
  <div class="text-center mb-4">
    <h1 class='display-4 fw-normal py-2'>Moje plany posiłków</h1>
    <%= link_to "Nowy plan", new_plan_path, data: { turbo_frame: "new_plan" }, class: "btn btn-primary my-4" %>
  </div>
  <% @plans.each_slice(3) do |row| %>
    <div class="row align-self-center row-cols-3 justify-content-start">
      <% row.each do |plan| %>
        <div class='col mb-3'>
          <div class="card text-center" style="width: 18rem;">
            <div class="card-body">
              <h5 class="card-title"><%= plan.name %></h5>
              <ul class="list-group list-group-flush">
                <% plan.recipes.each do |recipe| %>
                  <li class="list-group-item"><%= recipe.name %></li>
                <% end %>
              </ul>
              <%= link_to "Zobacz", plan, class: "btn btn-primary" %>
              <%= link_to "Usuń", plan_path(plan), data: {turbo_method: :delete, turbo_confirm: "Na pewno?"}, class: "btn btn-secondary" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
