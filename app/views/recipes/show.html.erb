<h1><%= @recipe.name %></h1>

<ul>
    <% @recipe.steps.each do |step| %>
      <li><%= step.instructions %></li>
    <% end %>
  </ul>

<ul>
  <li><%= link_to "Edit", edit_recipe_path(@recipe) %></li>
  <li><%= link_to "Delete", recipe_path(@recipe), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  } %></li>
</ul>
